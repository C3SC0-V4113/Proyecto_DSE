@using Business
@using Entities

<hr />
<div>
    Total categorías registradas: @categories.Count
</div>
<hr />
@if (categories == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table id="categoriesTable" class="display table table-striped table-hover">
        <thead>
            <tr>
                <th>Referencia</th>
                <th>Categoría</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a class="btn btn-outline-secondary" href="categories/update/@category.CategoryId">Editar</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="categories/delete/@category.CategoryId">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CategoryEntity> categories = new List<CategoryEntity>();

    protected override async Task OnInitializedAsync()
    {
        categories = B_Category.CategoryList();
    }
}
